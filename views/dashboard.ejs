    // Handle MCQ upload form submission
    document.getElementById('mcqUploadForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const fileInput = document.getElementById('mcqFile');
      const messageDiv = document.getElementById('mcqUploadMessage');
      const section = document.getElementById('mcqQuestionsSection');
      const subcategoryId = section.getAttribute('data-subcategory-id');
      
      if (!fileInput.files.length) {
        showMCQMessage('Please select a file to upload', 'danger');
        return;
      }

      const formData = new FormData();
      formData.append('mcqFile', fileInput.files[0]);
      formData.append('subcategoryId', subcategoryId);

      try {
        showMCQMessage('Uploading file...', 'info');
        const response = await fetch('/admin/mcq-questions/upload', {
          method: 'POST',
          body: formData
        });

        const result = await response.json();
        
        if (result.status) {
          showMCQMessage(
            `Success! Processed ${result.details.saved} questions.` + 
            (result.details.errors > 0 ? ` ${result.details.errors} errors occurred.` : ''),
            'success'
          );
          fileInput.value = '';
        } else {
          showMCQMessage(result.message || 'Error uploading file', 'danger');
        }
      } catch (error) {
        console.error('Upload error:', error);
        showMCQMessage('Error uploading file: ' + error.message, 'danger');
      }
    });

    function showMCQMessage(message, type) {
      const messageDiv = document.getElementById('mcqUploadMessage');
      messageDiv.textContent = message;
      messageDiv.className = `alert alert-${type}`;
      messageDiv.style.display = 'block';
    }
